% Minimizzare le pedine mangiate
:~ mangiata(_,X,Y). [1:1]

% Vincolo per calcolo del valore della cella
:~ in(_,X,Y), valore(V,X,Y), #int(V). [1:2] 

% Preferisci le pedine stabili come vincolo di maggiore priorità
:~ in(0,X,Y), mangiabile(X,Y). [1:3]

% NORD
mangiabile(R1,C1) :- not occupata(R,C), adiacenti(R,C,R1,C1), in(0,R1,C1), pedina(1,R2,C2), R<R1, R1<R2, C=C1, C=C2.

% SUD
mangiabile(R1,C1) :- not occupata(R,C), adiacenti(R,C,R1,C1), in(0,R1,C1), pedina(1,R2,C2), R>R1, R1>R2, C=C1, C=C2.

% EST
